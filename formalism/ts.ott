    G |> t ; t' : T' <| G''

  
    G ( x ) = ( </ Ui >> Vi // i /> ) -> T
    Ti <: Ui
    Ti' = remap ( Ti , Ui >> Vi )
    ---------------------------------------------------------------------------- :: fun_call
    G , </ xi : Ti // i /> |> x ( </ xi // i /> ) : T <| G, </ xi : Ti' // i />


    SSet' = Next ( O @ SSet . m )
    T = RType ( O @ SSet . m )
